{
  "name": "papr",
  "description": "MongoDB TypeScript-aware Models",
  "author": "Plex Inc.",
  "version": "15.0.0",
  "keywords": [
    "mongodb",
    "database",
    "model",
    "schema",
    "json",
    "json-schema",
    "validation",
    "typescript",
    "types"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.20.1"
  },
  "type": "module",
  "types": "./esm/index.d.ts",
  "main": "./cjs/index.js",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "files": [
    "cjs/*",
    "esm/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plexinc/papr.git"
  },
  "homepage": "https://plexinc.github.io/papr/",
  "bugs": {
    "url": "https://github.com/plexinc/papr/issues/new"
  },
  "scripts": {
    "build": "./build.sh",
    "docs": "node docs/build.js && docsify serve ./docs",
    "benchmark": "pnpm build && node --experimental-specifier-resolution=node ./benchmark/run.js",
    "lint": "eslint --ext .js,.mjs,.ts .",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "prepack": "pinst --disable && pnpm build",
    "pretty": "prettier '**/*.{js,md,ts}' --write",
    "pretty:ci": "prettier '**/*.{js,md,ts}' --check",
    "release": "standard-version --infile docs/CHANGELOG.md",
    "test": "jest",
    "test:build": "./tests/build.sh",
    "test:types": "tsc",
    "watch": "jest --watchAll",
    "watch:types": "tsc --watch"
  },
  "devDependencies": {
    "@babel/core": "7.22.19",
    "@babel/preset-env": "7.22.15",
    "@babel/preset-typescript": "7.22.15",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@types/node": "18.17.16",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "arg": "5.0.2",
    "docsify-cli": "4.4.4",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "16.1.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jsdoc-api": "8.0.0",
    "jsdoc-parse": "6.2.0",
    "lint-staged": "14.0.1",
    "mongodb": "6.1.0",
    "mongodb-memory-server": "8.15.1",
    "mongoose": "7.5.2",
    "pinst": "3.0.0",
    "prettier": "3.0.3",
    "standard-version": "9.5.0",
    "ts-expect": "1.3.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "peerDependencies": {
    "mongodb": "^6.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{js,mjs,ts}": [
      "eslint --ext .js,.mjs,.ts --fix",
      "prettier --write --list-different"
    ],
    "src/*.ts": [
      "node docs/build.js",
      "git add docs/"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "volta": {
    "node": "18.17.1",
    "pnpm": "8.7.5"
  },
  "packageManager": "pnpm@8.7.5"
}
